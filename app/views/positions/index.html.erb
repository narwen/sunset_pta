<% if @positions.size == 0 %>
  There are no positions
<% else %>
  <% @positions.each do |position| %>
    <br />
    <%= position.title %>
    <% if current_user.has_role? :admin %>
      <%= link_to "Delete #{position.title}", position, :method => :delete %>
      <%= link_to "Edit #{position.title}", edit_position_path(position) %>
    <% end %>
  <% end %>
<% end %>