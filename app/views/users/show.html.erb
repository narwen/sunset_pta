<% if show_edit_link? %>
  <p><%= link_to "Edit", edit_user_path(@user) %></p>
<% end %>

<p>Name: <%= @user.name %></p>
<%- if @user.position -%>
  <p>Board position: <%= @user.position.title %></p>
<%- end -%>
<p>Email: <%= @user.email %></p>
<p>Address: <%= @user.address %></p>
<p>City: <%= @user.city %></p>
<p>State: <%= @user.state %></p>
<p>Zip: <%= @user.zip %></p>
