<h2>Sunset PTA Volunteers</h2>

<table>
  <tr>
    <th>Volunteer</th>
    <th>Position</th>
    <th>Admin?</th>
  </tr>
<%- @users.each do |user| -%>
  <tr>
    <td><%= link_to(user.full_name, user_path(user)) %></td>
    <td><%= user.position.try(:title) %></td>
    <td><%= 'X' if user.has_role?(:admin) %></td>
  </tr>
<%- end -%>
</table>
